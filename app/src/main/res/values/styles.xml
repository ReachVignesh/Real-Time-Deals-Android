<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myThemeNoActionBar" parent="@android:style/Theme.Holo.Light">

        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="myTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/myTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:actionOverflowButtonStyle">@style/myTheme.ActionOverflow</item>
    </style>

    <style name="myTheme.ActionOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>

    <style name="myTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/mytheme_color</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

</resources>
